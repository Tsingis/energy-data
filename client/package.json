{
  "name": "energy-data",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config .vite.config.ts --open",
    "dev:testing": "vite --config ./vite.config.ts",
    "dev:check": "vite --config ./vite.config.ts --open -- --use-checker",
    "test": "vitest --config vitest.config.ts",
    "playwright:setup": "npx playwright install --with-deps",
    "playwright": "npx playwright test --config=playwright.config.ts",
    "playwright:update": "npx playwright test --config=playwright.config.ts --update-snapshots",
    "audit": "npm audit --audit-level low",
    "eslint": "eslint . --config ./eslint.config.js",
    "eslint:fix": "eslint . --config ./eslint.config.js --fix",
    "prettier": "prettier --check '**/*.{js,ts,vue,css,html}'",
    "prettier:fix": "prettier --write '**/*.{js,ts,vue,css,html}'",
    "typecheck": "vue-tsc --noEmit -p ./tsconfig.json",
    "build": "vue-tsc -b ./tsconfig.json && vite --config ./vite.config.ts build"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "chart.js": "^4.4.9",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/vue": "^8.1.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.15",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "eslint": "^9.26.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-vue": "^10.1.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.1",
    "typescript": "5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-checker": "^0.9.3",
    "vitest": "^3.1.3",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.10"
  }
}
